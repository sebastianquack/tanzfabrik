
<div id="user_account_wrapper">
  <div class="content"> 
    <h3 class="title">Forgot your password?</h3>
    
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "text-input-field" %>
      </div>

      <div class="actions">
        <%= f.submit "Send me reset password instructions", class: "btn" %>
      </div>
    <% end %>

    <%= render "users/shared/links" %>
  </div>
</div>
if params[:year]
  start_date = Date.parse('01-01-' + params[:year])
  end_date = start_date.end_of_year
  performance_projekte = Event.joins(:type, :event_details).where('event_types.id = 5 AND event_details.start_date >= ? AND event_details.start_date <= ?', start_date, end_date).uniq.sort_by{ |e| e.start_date }
else 
  performance_projekte = Event.currently_listed.joins(:type, :event_details).where('event_types.id = 5').uniq.sort_by{ |e| e.start_date }
end


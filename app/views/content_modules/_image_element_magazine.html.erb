<div class="module__image_element_magazine" data-section="<%= content_module.section %>" data-border-bottom="<%= content_module.border_bottom%>">
  
  <% if content_module.headline %>
    <h3 class="headline"><%= content_module.headline_shy.html_safe %></h3>
  <% end %>

  <% if content_module.images.length > 0 %>
    <img 
      class="image" 
      src="<%= content_module.images[0].attachment.url(:large) %>"
      alt="<%= content_module.images[0].description %>"
     >
  <% end %>

  <div class="text">
    <% if content_module.rich_content_1 %>
        <%= content_module.rich_content_1  %>
    <% end %>
  </div>

</div>
<% parameterSet = false %>
<% if content_module.parameter %>
  <% unless content_module.parameter.empty? %>
    <% parameterSet = true %>
  <% end %>
<% end %>

<div class="module__content_element" data-section="<%= content_module.section %>" data-border-bottom="<%= content_module.border_bottom%>">
  
  <div class="column_left">

  <% if content_module.images.count > 0 %>
    <img 
      src="<%= content_module.images[0].attachment.url(:large) %>" 
      alt="<%= content_module.images[0].description %>" 
    >
  <% end %>

  <%#= content_module.inspect %>
  <% if parameterSet %>
    <div class="mapWrapper">
      <iframe width="560" height="315"
        frameborder="0" style="border:0"
        src="<%= content_module.parameter %>" allowfullscreen>
      </iframe>
    </div>
  <% end %>

  </div>

  <div class="column_right">

    <% if content_module.headline %>
      <h2>
        <%= content_module.headline_shy.html_safe %>
      </h2>
    <% end %>

    <% if content_module.special_text %>
      <div class="special_text">
        <%= content_module.special_text  %>
      </div>    
    <% end %>

    <% if content_module.rich_content_1 %>
      <div class="rich_content_1">
        <%= content_module.rich_content_1 %>
      </div>
    <% end %>

    <div class="downloads">
      <% content_module.downloads.each do |download| %>
        <a class="button pdf" title="<%= download.description %>" href="<%= download.attachment.url %>"><%= download.description %></a>
      <% end %>
    </div>

    <%= render :partial => "content_modules/_button", :locals => { :obj => content_module } %>

  </div>

</div>


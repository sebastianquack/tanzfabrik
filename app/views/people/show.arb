div :class => "row" do
  div :class => "basic" do
    h1 person.name
    div person.rich_content
    div do
      person.events.map { |e| (link_to e.type.name + " " + e.title, event_path(e)) }.join(', ').html_safe
    end  
  end

  div :class => "details" do
    img :src => person.images.first.attachment.url(:medium) if person.images.length > 0 
  end

  a "✎", :href => edit_admin_person_path(person), :class => "admin-only classes" if admin_user_signed_in?
end



